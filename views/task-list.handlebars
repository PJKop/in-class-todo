
{{!-- Task list view will go here --}}
<head>
	<script src="/static/index.js">
	</script>
	<link href="/static/main.css" rel="stylesheet"``>
</head>

<h1>To do list </h1>


<table>
    <thead class="header">
        <th>Row Id</th>
        <th>Task</th>
        <th>Time submitted</th>
        <th>Complete</th>
    </thead>
    {{#each tasks}}
    {{#if complete }}
    <tr class="complete">
        <td>{{rowid}}</td>
        <td>{{body}}</td>
        <td>{{date}}</td>
        <td>FINISHED</td>
    </tr>
    {{else}}
    <tr class="incomplete">
        <td>{{rowid}}</td>
        <td>{{body}}</td>
        <td>{{date}}</td>
        <td> 
            <form action="/api/tasks/completed" method="GET">
                <input type="hidden" name="rowid" value={{rowid}}>
                <input type="submit" value="Finished?">
            </form>
        </td>
    </tr>
    {{/if}}
    {{/each}}
</table>

